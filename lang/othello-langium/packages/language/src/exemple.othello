game Othello {
  board 8 x 8

  players {
    black { id "B" }
    white { id "W" }
  }

  initial {
    cell(4,4) = W
    cell(5,5) = W
    cell(4,5) = B
    cell(5,4) = B
  }

  rules {
    move {
      type placement
      valid if captures_in_any_direction(r,c)
      effect flip_captured_stones(r,c)
    }

    end when captures_in_any_direction(r,c)
    scoring count_pieces_per_player
  }
}